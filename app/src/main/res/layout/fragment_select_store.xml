<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.PlaceOrderFragment"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:background="@color/gradEnd"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:textColor="@color/colorBackground"
        android:textStyle="bold"
        android:textSize="23dp"
        android:gravity="center"
        android:text="Geolocation"
        android:id="@+id/geoLocation"
        android:fontFamily="@font/raleway_semibold"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/mdlf"
            android:id="@+id/logo"
            />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_below="@+id/logo">
            <LinearLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <Spinner
                    android:id="@+id/area_edit_tv"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="0dp"
                    android:layout_weight="8.8"
                    android:layout_height="wrap_content"
                    android:prompt="@string/area_prompt"
                    android:spinnerMode="dialog" />
                <ImageButton
                    android:layout_gravity="center"
                    android:background="@color/colorBackground"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    
                    android:src="@drawable/ic_add_circle_black_24dp"/>

            </LinearLayout>
            <LinearLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <Spinner
                    android:id="@+id/pharmacy_edit_tv"
                    android:layout_weight="8.8"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:prompt="@string/pharmacy_prompt"
                    android:spinnerMode="dialog" />
                <ImageButton
                    android:layout_gravity="center"
                    android:background="@color/colorBackground"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add_circle_black_24dp"/>

            </LinearLayout>

        </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <ImageButton
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_gravity="right"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/gradEnd"
            android:layout_height="40dp"
            android:layout_gravity=""
            android:textColor="@color/colorBackground"
            android:textStyle="bold"
            android:textSize="23dp"
            android:gravity="center"
            android:text="Swipe up for Stats"
            android:fontFamily="@font/raleway_semibold"/>

    </RelativeLayout>



</LinearLayout>
